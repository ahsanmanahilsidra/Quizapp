<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/loginbg"
    tools:context=".html">

    <!-- Top View -->
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/hometopbg" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="#316AD8"
        android:src="@drawable/backarrow" />

    <!-- Logo -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="94dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/techtrivlogo" />

    <!-- Greeting Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp" />

    <!-- Dynamic Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <!-- CardView 1 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@id/view"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/cardview"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME! TO"
                android:textStyle="bold"
                android:textColor="#6F9F3C" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Html Language"
                android:textStyle="bold"
                android:textColor="#6F9F3C" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- VideoView -->
    <VideoView
        android:id="@+id/vedioviewgif"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_below="@id/card1"
        android:layout_marginLeft="80dp" />

    <!-- Trainings Text -->
    <TextView
        android:id="@+id/training"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vedioviewgif"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="26dp"
        android:text="Trainings"
        android:textColor="#6F9F3C"
        android:textSize="15dp"
        android:textStyle="bold" />

    <!-- Training Levels -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/training"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp">

        <!-- Beginning Level -->
        <androidx.cardview.widget.CardView
            android:id="@+id/trainingbegll"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:background="@drawable/cardview"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEGINNING LEVEL"
                    android:textColor="#6F9F3C"
                    android:textSize="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Intermediate Level -->
        <androidx.cardview.widget.CardView
            android:id="@+id/traininginterll"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:layout_toRightOf="@id/trainingbegll"
            android:background="@drawable/cardview"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTERMEDIATE LEVEL"
                    android:textColor="#6F9F3C"
                    android:textSize="9dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Advance Level -->
        <androidx.cardview.widget.CardView
            android:id="@+id/trainingadvll"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:layout_toRightOf="@id/traininginterll"
            android:background="@drawable/cardview"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADVANCE LEVEL"
                    android:textColor="#6F9F3C"
                    android:textSize="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!-- Quiz Section -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/training"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="140dp">

        <!-- Quiz CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/jhfdik"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_margin="7dp"
            android:background="@drawable/cardview"
            app:cardCornerRadius="15dp"
            app:cardElevation="12dp">

            <!-- Quiz Text -->

            <!-- Quiz Levels -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/quiz"
                android:layout_marginLeft="8dp">

                <!-- Beginning Level -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quizbegll"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="7dp"
                    android:background="@drawable/cardview"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/trainingbeg"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BEGINNING LEVEL"
                            android:textColor="#6F9F3C"
                            android:textSize="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Intermediate Level -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quizinterll"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@id/quizbegll"
                    android:background="@drawable/cardview"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/whitelight"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/trainingbeg"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INTERMEDIATE LEVEL"
                            android:textColor="#6F9F3C"
                            android:textSize="9dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Advance Level -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/quizadvll"
                    android:layout_width="wrap_content"
                    android:layout_height="90dp"
                    android:layout_margin="7dp"
                    android:layout_toRightOf="@id/quizinterll"
                    android:background="@drawable/cardview"
                    app:cardCornerRadius="15dp"
                    android:backgroundTint="@color/whitelight"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/trainingbeg"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADVANCE LEVEL"
                            android:textColor="#6F9F3C"
                            android:textSize="10dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <TextView
        android:id="@+id/quiz"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/training"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="13dp"
        android:text="Quiz"
        android:textColor="#6F9F3C"
        android:textSize="15dp"
        android:textStyle="bold" />
</RelativeLayout>
