<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".csharp"
    android:orientation="vertical"
    android:background="@drawable/loginbg">
    <View
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/view"
        android:background="@drawable/hometopbg"/>
    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#316AD8"
        android:src="@drawable/backarrow" />
    <ImageView
        android:layout_width="80dp"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/techtrivlogo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="78dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_below="@+id/view"
        android:layout_marginTop="-35dp"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="80dp"
        app:cardElevation="15dp"
        android:fadingEdgeLength="15dp"
        android:background="@drawable/cardview"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/cardview"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WELCOME! TO"
                android:textStyle="bold"
                android:textColor="#6F9F3C"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Csharp Language"
                android:textStyle="bold"
                android:textColor="#6F9F3C"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <VideoView
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/card1"
        android:id="@+id/vedioviewgif"
        ></VideoView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vedioviewgif"
        android:textSize="15dp"
        android:id="@+id/training"
        android:text="Trainings"
        android:textStyle="bold"
        android:layout_marginLeft="3dp"
        android:textColor="#6F9F3C"></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/training"
        android:layout_marginLeft="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/cardview"
            android:layout_margin="7dp"
            android:id="@+id/trainingbegll"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/cardview"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEGINNING LEVEL"
                    android:textSize="10dp"
                    android:textColor="#6F9F3C"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/cardview"
            android:layout_margin="7dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_toRightOf="@+id/trainingbegll"
            android:layout_row="1"
            android:id="@+id/traininginterll"
            android:layout_column="0"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/cardview"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTERMEDIATE LEVEL"
                    android:textSize="9dp"
                    android:textColor="#6F9F3C"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/cardview"
            android:layout_margin="7dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_toRightOf="@+id/traininginterll"
            android:layout_row="1"
            android:id="@+id/trainingadvll"
            android:layout_column="0"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/cardview"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADVANCE LEVEL"
                    android:textColor="#6F9F3C"
                    android:textSize="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <TextView
        android:id="@+id/quiz"
        android:layout_width="60dp"
        android:layout_height="17dp"
        android:layout_below="@+id/training"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="110dp"
        android:text="Quiz"
        android:textColor="#6F9F3C"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quiz"
        android:layout_marginLeft="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/cardview"
            android:layout_margin="7dp"
            android:id="@+id/quizbegll"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/cardview"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEGINNING LEVEL"
                    android:textSize="10dp"
                    android:textColor="#6F9F3C"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/cardview"
            android:layout_margin="7dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_toRightOf="@+id/quizbegll"
            android:layout_row="1"
            android:id="@+id/quizinterll"
            android:layout_column="0"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/cardview"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INTERMEDIATE LEVEL"
                    android:textSize="9dp"
                    android:textColor="#6F9F3C"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:cardCornerRadius="15dp"
            android:background="@drawable/cardview"
            android:layout_margin="7dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_toRightOf="@+id/quizinterll"
            android:layout_row="1"
            android:id="@+id/quizadvll"
            android:layout_column="0"
            app:cardElevation="12dp">
            <LinearLayout
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:background="@drawable/cardview"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/trainingbeg"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADVANCE LEVEL"
                    android:textColor="#6F9F3C"
                    android:textSize="10dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>