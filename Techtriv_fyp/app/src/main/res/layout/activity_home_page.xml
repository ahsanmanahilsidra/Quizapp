<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/loginbg"
    >

   <View
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:id="@+id/view"
       android:background="@drawable/hometopbg"/>
   <GridLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/view"
       android:rowCount="4"
       android:columnCount="2"
       android:layout_marginLeft="5dp"
       android:layout_marginRight="5dp"
       android:layout_marginTop="-50dp"
       >

      <androidx.cardview.widget.CardView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          app:cardCornerRadius="15dp"
          android:background="@drawable/cardview"
          android:layout_margin="12dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_row="1"
          android:id="@+id/pythonstart"
          android:layout_column="0"
          app:cardElevation="12dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:gravity="center"
             android:layout_height="match_parent"
             android:background="@drawable/cardview"
            android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/pythonlogo"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Python"
               android:layout_gravity="center_horizontal"
               android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#72A33E"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cstart"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardCornerRadius="15dp"
          android:layout_margin="12dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_row="1"
          android:layout_column="1"
          app:cardElevation="12dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="@drawable/cardview"
             android:orientation="vertical">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/clogo"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="C"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#72A33E"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/htmlstart"
          android:layout_width="150dp"
          android:layout_height="100dp"
          app:cardCornerRadius="15dp"
          android:layout_margin="12dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_row="2"
          android:layout_column="0"
          app:cardElevation="12dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="@drawable/cardview"
             android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/htmllogo"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Html"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#72A33E"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/cplusstart"
          android:layout_width="150dp"
          android:layout_height="100dp"
          app:cardCornerRadius="15dp"
          android:layout_margin="12dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_row="2"
          android:layout_column="1"
          app:cardElevation="12dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/cardview"
             android:gravity="center"
             android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/cpluslo"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C++"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#72A33E"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="100dp"
          android:id="@+id/javastart"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_row="3"
          android:layout_column="0"
          app:cardElevation="12dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/cardview"
             android:gravity="center"
             android:orientation="vertical">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/javalogo"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
android:text="Java"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#72A33E"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/csharpstart"
          android:layout_width="150dp"
          android:layout_height="100dp"
          android:layout_margin="12dp"
          app:cardCornerRadius="15dp"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          android:layout_row="3"
          android:layout_column="1"
          app:cardElevation="12dp">
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/cardview"
             android:gravity="center"
             android:orientation="vertical">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/csharplogo"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Csharp"
                android:layout_gravity="center_horizontal"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#72A33E"/>
         </LinearLayout>
      </androidx.cardview.widget.CardView>





   </GridLayout>
   <ImageView
       android:layout_width="80dp"
       android:layout_height="94dp"
       android:layout_gravity="center"
       android:layout_marginLeft="138dp"
       android:layout_marginTop="22dp"
       android:src="@drawable/techtrivlogo" />

   <ImageButton
       android:id="@+id/backbtn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:backgroundTint="#316AD8"
       android:src="@drawable/backarrow" />


   <ImageButton
       android:id="@+id/profile"
       android:layout_width="50dp"
       android:layout_height="60dp"
       android:layout_marginLeft="320dp"
       android:backgroundTint="#316AD8"
       android:src="@drawable/homeprofilelogo" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="My Dashboard"
    android:textColor="@color/white"
    android:textSize="17dp"
    android:gravity="center"
    android:layout_marginLeft="130dp"
    android:layout_marginTop="120dp"
    android:textStyle="bold"/>
</RelativeLayout>

